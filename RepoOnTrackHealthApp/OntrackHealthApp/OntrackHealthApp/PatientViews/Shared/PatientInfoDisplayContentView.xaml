<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OntrackHealthApp.Views.Shared.PatientInfoDisplayContentView">
    <ContentView.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" BackgroundColor="#F8BA00" Padding="12">
            <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0" Spacing="0">
                <Label x:Name="LabelPatientFullName" Text="{ Binding PatientFullName}" TextColor="#154360" FontSize="22"  />
                <Label x:Name="LabelProcedureName" Text="{ Binding ProcedureName}" TextColor="#154360 " FontSize="16" />
                <Label x:Name="LabelProfessionalName" Text="{ Binding ProfessionalName}" TextColor="#154360 " FontSize="16" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>